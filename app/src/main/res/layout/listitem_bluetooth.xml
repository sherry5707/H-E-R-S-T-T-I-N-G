<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="30px"
                android:paddingRight="36px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49px"
        android:layout_marginBottom="10px">

        <TextView
            android:id="@+id/bt_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:text="wifi bluetooth"
            android:textColor="@color/major_text_color"
            android:fontFamily="zh-Hans"
            android:textSize="@dimen/bt_device_name_size"/>

        <TextView
            android:id="@+id/bt_device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="@string/bt_not_connected"
            android:textColor="@color/minor_text_color"
            android:textSize="@dimen/bt_device_status_size"/>

        <ImageView
            android:id="@+id/connecting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:layout_centerVertical="true"
            android:src="@drawable/scan_icon"
            android:visibility="invisible"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cutting_line"/>

</RelativeLayout>